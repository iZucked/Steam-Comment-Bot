<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewerContentBinding
            viewerId="com.mmxlabs.scenario.service.ui.navigator">
         <includes>
            <contentExtension
                  isRoot="true"
                  pattern="com.mmxlabs.scenario.service.ui.navigatorContent">
            </contentExtension>
            <contentExtension
                  pattern="com.mmxlabs.scenario.service.ui.ScenarioServiceLinkHelper">
            </contentExtension>            
         </includes>
      </viewerContentBinding>
      <viewer
            viewerId="com.mmxlabs.scenario.service.ui.navigator">
         <options>
            <property
                  name="org.eclipse.ui.navigator.hideLinkWithEditorAction"
                  value="true">
            </property>
            <property
                  name="org.eclipse.ui.navigator.hideAvailableCustomizationsDialog"
                  value="true">
            </property>
            <property
                  name="org.eclipse.ui.navigator.hideAvailableExtensionsTab"
                  value="true">
            </property>
            <property
                  name="org.eclipse.ui.navigator.customizeViewDialogHelpContext" value="">
            </property>
         </options>
      </viewer>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="com.mmxlabs.scenario.service.ui.navigator.ScenarioServiceNavigator"
            icon="icons/filenav_nav.gif"
            id="com.mmxlabs.scenario.service.ui.navigator"
            name="Scenarios"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.navigatorContent">
      <navigatorContent
            activeByDefault="true"
            contentProvider="com.mmxlabs.scenario.service.ui.ScenarioServiceContentProvider"
            id="com.mmxlabs.scenario.service.ui.navigatorContent"
            labelProvider="com.mmxlabs.scenario.service.ui.ScenarioServiceLabelProvider"
            name="Scenario Service Content">
         <triggerPoints>
            <instanceof
                  value="com.mmxlabs.scenario.service.model.ScenarioModel">
            </instanceof>
            <instanceof
                  value="com.mmxlabs.scenario.service.model.Container">
            </instanceof>
         </triggerPoints>
         <dropAssistant
               class="com.mmxlabs.scenario.service.ui.dnd.ScenarioDragAssistant"
               id="com.mmxlabs.scenario.service.ui.dnd.ScenarioDragAssistant">
            <possibleDropTargets>
               <instanceof
                     value="com.mmxlabs.scenario.service.model.Container">
               </instanceof></possibleDropTargets>
         </dropAssistant>
         <possibleChildren>
            <instanceof
                  value="com.mmxlabs.scenario.service.model.Container">
            </instanceof>
         </possibleChildren>
      </navigatorContent>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="com.mmxlabs.scenario.service.ui.open"
            name="Open">
      </command>
      <command
            id="com.mmxlabs.scenario.service.ui.lock"
            name="Lock/Unlock">
      </command>
      <command
            id="com.mmxlabs.scenario.service.ui.newfolder"
            name="New Folder">
      </command>
      <command
            description="Fork the current scenario"
            id="com.mmxlabs.scenario.service.ui.fork"
            name="Fork Scenario">
      </command>
      <command
            id="com.mmxlabs.scenario.service.ui.revert"
            name="Revert">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.mmxlabs.scenario.service.ui.commands.OpenScenarioCommandHandler"
            commandId="com.mmxlabs.scenario.service.ui.open">
         <enabledWhen>
            <iterate
                  ifEmpty="false">
               <and>
                  <instanceof
                        value="com.mmxlabs.scenario.service.model.ScenarioInstance">
                  </instanceof>
               </and>
            </iterate>
         </enabledWhen>
      </handler>
      <handler
            class="com.mmxlabs.scenario.service.ui.commands.LockScenarioCommandHandler"
            commandId="com.mmxlabs.scenario.service.ui.lock">
         <enabledWhen>
            <iterate
                  ifEmpty="false">
               <and>
                  <instanceof
                        value="com.mmxlabs.scenario.service.model.ScenarioInstance">
                  </instanceof>
               </and>
            </iterate>
         </enabledWhen>
      </handler>
      <handler
            class="com.mmxlabs.scenario.service.ui.commands.DeleteScenarioCommandHandler"
            commandId="org.eclipse.ui.edit.delete">
         <activeWhen>
            <iterate
                  ifEmpty="false">
               <and>
                  <instanceof
                        value="com.mmxlabs.scenario.service.model.Container">
                  </instanceof>
                  <not>
                     <instanceof
                           value="com.mmxlabs.scenario.service.model.ScenarioService">
                     </instanceof>
                  </not>
               </and>
            </iterate>
         </activeWhen>
         <enabledWhen>
            <iterate
                  ifEmpty="false">
               <and>
                  <instanceof
                        value="com.mmxlabs.scenario.service.model.Container">
                  </instanceof>
                  <not>
                     <instanceof
                           value="com.mmxlabs.scenario.service.model.ScenarioService">
                     </instanceof>
                  </not>
               </and>
            </iterate>
         </enabledWhen>
      </handler>
      <handler
            class="com.mmxlabs.scenario.service.ui.commands.CopyScenarioCommandHandler"
            commandId="org.eclipse.ui.edit.copy">
         <activeWhen>
               <with
                     variable="selection">
            <iterate
                  ifEmpty="false">
               <and>
                  <instanceof
                        value="com.mmxlabs.scenario.service.model.ScenarioInstance">
                  </instanceof>
               </and>
            </iterate>
               </with>
         </activeWhen>
         <enabledWhen>
                <with
                     variable="selection">
            <iterate
                  ifEmpty="false">
               <and>
                  <instanceof
                        value="com.mmxlabs.scenario.service.model.ScenarioInstance">
                  </instanceof>
               </and>
            </iterate>
            </with>
         </enabledWhen>
      </handler>
      <handler
            class="com.mmxlabs.scenario.service.ui.commands.PasteScenarioCommandHandler"
            commandId="org.eclipse.ui.edit.paste">
         <activeWhen>
                <with
                     variable="selection">
            <iterate
                  ifEmpty="false">
               <and>
                  <instanceof
                        value="com.mmxlabs.scenario.service.model.Folder">
                  </instanceof>
               </and>
            </iterate>
            </with>
         </activeWhen>
         <enabledWhen>
                <with
                     variable="selection">
            <iterate
                  ifEmpty="false">
               <and>
                  <instanceof
                        value="com.mmxlabs.scenario.service.model.Folder">
                  </instanceof>
               </and>
            </iterate>
            </with>
         </enabledWhen>
      </handler>
      <handler
            class="com.mmxlabs.scenario.service.ui.commands.NewFolderCommandHandler"
            commandId="com.mmxlabs.scenario.service.ui.newfolder">
         <activeWhen>
            <or>
               <count
                     value="0">
               </count>
               <and>
                  <count
                        value="1">
                  </count>
                  <iterate
                        ifEmpty="false">
                     <or>
                        <instanceof
                              value="com.mmxlabs.scenario.service.model.Folder">
                        </instanceof>
                        <instanceof
                              value="com.mmxlabs.scenario.service.model.ScenarioService">
                        </instanceof>
                     </or>
                  </iterate>
               </and>
            </or>
         </activeWhen>
         <enabledWhen>
            <or>
               <count
                     value="0">
               </count>
               <and>
                  <count
                        value="1">
                  </count>
                  <iterate
                        ifEmpty="false">
                     <or>
                        <instanceof
                              value="com.mmxlabs.scenario.service.model.Folder">
                        </instanceof>
                        <instanceof
                              value="com.mmxlabs.scenario.service.model.ScenarioService">
                        </instanceof>
                     </or>
                  </iterate>
               </and>
            </or></enabledWhen>
      </handler>
      <handler
            class="com.mmxlabs.scenario.service.ui.commands.RenameElementHandler"
            commandId="org.eclipse.ui.edit.rename">
         <activeWhen>
            <iterate
                  ifEmpty="false">
               <or>
                  <instanceof
                        value="com.mmxlabs.scenario.service.model.ScenarioInstance">
                  </instanceof>
                  <instanceof
                        value="com.mmxlabs.scenario.service.model.Folder">
                  </instanceof>
               </or>
            </iterate>
         </activeWhen>
         <enabledWhen>
            <iterate
                  ifEmpty="false">
               <or>
                  <instanceof
                        value="com.mmxlabs.scenario.service.model.ScenarioInstance">
                  </instanceof>
                  <instanceof
                        value="com.mmxlabs.scenario.service.model.Folder">
                  </instanceof>
               </or>
            </iterate>
         </enabledWhen>
      </handler>
      <handler
            class="com.mmxlabs.scenario.service.ui.commands.ForkScenarioCommandHandler"
            commandId="com.mmxlabs.scenario.service.ui.fork">
         <activeWhen>
            <with
                  variable="selection">
               <iterate
                     ifEmpty="false">
                  <instanceof
                        value="com.mmxlabs.scenario.service.model.ScenarioInstance">
                  </instanceof>
               </iterate>
            </with>
         </activeWhen>
      </handler>
      <handler
            class="com.mmxlabs.scenario.service.ui.commands.RevertScenarioCommandHandler"
            commandId="com.mmxlabs.scenario.service.ui.revert">
              <activeWhen>
            <with
                  variable="selection">
               <iterate
                     ifEmpty="false">
                  <instanceof
                        value="com.mmxlabs.scenario.service.model.ScenarioInstance">
                  </instanceof>
               </iterate>
            </with>
         </activeWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="toolbar:com.mmxlabs.scenario.service.ui.navigator">
         <command
               commandId="com.mmxlabs.scenario.service.ui.lock"
               icon="icons/commands/lock.gif"
               label="Lock"
               style="push"
               tooltip="Lock/Unlock Scenario">
         </command>
         <command
               commandId="org.eclipse.ui.edit.delete"
               label="Delete"
               style="push"
               tooltip="Delete Scenario">
         </command>
         <command
               commandId="com.mmxlabs.scenario.service.ui.newfolder"
               icon="icons/newfolder_wiz.gif"
               label="New Folder"
               style="push"
               tooltip="Create a new folder">
         </command>
         <command
               commandId="com.mmxlabs.scenario.service.ui.fork"
               label="Fork"
               style="push">
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:com.mmxlabs.scenario.service.ui.navigator">
         <command
               commandId="com.mmxlabs.scenario.service.ui.newfolder"
               icon="icons/newfolder_wiz.gif"
               label="New Folder"
               style="push"
               tooltip="Create a new folder">
         </command>
         <command
               commandId="org.eclipse.ui.edit.rename"
               label="Rename"
               style="push">
         </command>
         <command
               commandId="com.mmxlabs.scenario.service.ui.fork"
               label="Fork"
               style="push">
         </command>
         <command
               commandId="org.eclipse.ui.edit.copy"
               label="Copy"
               style="push">
            <visibleWhen>
            	<or>
               		<with
                     	variable="selection">
                  		<iterate ifEmpty="false">
                  		<or>
                     		<instanceof
                           		value="com.mmxlabs.scenario.service.model.Folder">
                     		</instanceof>
                     		<instanceof
                           		value="com.mmxlabs.scenario.service.model.ScenarioInstance">
                     		</instanceof>
                     		</or>
                  		</iterate>
               		</with>
               </or>
            </visibleWhen>
         </command>
         <command
               commandId="org.eclipse.ui.edit.paste"
               label="Paste"
               style="push">
         </command>
         <command
               commandId="org.eclipse.ui.edit.delete"
               label="Delete"
               style="push">
         </command>
         <separator
               name="Imports">
         </separator>
         <command
               commandId="com.mmxlabs.scenario.service.ui.revert"
               label="Revert"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.linkHelper">
      <linkHelper
            class="com.mmxlabs.scenario.service.ui.ScenarioServiceLinkHelper"
            id="com.mmxlabs.scenario.service.ui.ScenarioServiceLinkHelper">
         <editorInputEnablement>
            <instanceof
                  value="com.mmxlabs.scenario.service.ui.editing.IScenarioServiceEditorInput">
            </instanceof>
         </editorInputEnablement>
         <selectionEnablement>
            <instanceof
                  value="com.mmxlabs.scenario.service.model.ScenarioInstance">
            </instanceof>
         </selectionEnablement>
      </linkHelper>
   </extension>
   <extension
         point="org.eclipse.ui.commandImages">
      <image
            commandId="com.mmxlabs.scenario.service.ui.fork"
            icon="icons/fork.gif">
      </image>
      <image
            commandId="com.mmxlabs.scenario.service.ui.lock"
            icon="icons/commands/lock.gif">
      </image>
   </extension>
   <extension
         point="org.eclipse.ui.decorators">
      <decorator
            adaptable="false"
            class="com.mmxlabs.scenario.service.ui.navigator.ValidatingDecorator"
            id="com.mmxlabs.scenario.service.ui.navigator.ValidatingDecorator"
            label="Validation Decorator"
            lightweight="true"
            location="BOTTOM_RIGHT"
            state="false">
         <enablement>
               <objectClass
                     name="com.mmxlabs.scenario.service.model.ScenarioInstance">
               </objectClass>
         </enablement>
      </decorator>
   </extension>

</plugin>
