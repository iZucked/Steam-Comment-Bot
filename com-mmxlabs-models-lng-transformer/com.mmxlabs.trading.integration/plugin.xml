<?eclipse version="3.4"?>
<plugin>
   <extension
         id="com.mmxlabs.trading.integration.transformer"
         point="com.mmxlabs.lngscheduler.transformer">
      <Transformer
            transformer="com.mmxlabs.trading.integration.TradingTransformerExtension">
      </Transformer>
      <Transformer
            transformer="com.mmxlabs.trading.integration.StandardContractTransformer">
         <modelclass
               class=" com.mmxlabs.models.lng.commercial.NetbackPurchaseContract">
         </modelclass>
         <modelclass
               class="com.mmxlabs.models.lng.commercial.ProfitSharePurchaseContract">
         </modelclass>
      </Transformer>
   </extension>
   <extension
         id="com.mmxlabs.trading.integration.exporter"
         name="Trading Exporter"
         point="com.mmxlabs.lngscheduler.exporter">
      <ExportExtension
            exporter="com.mmxlabs.trading.integration.TradingExporterExtension">
      </ExportExtension>
   </extension>
 <extension
         point="org.eclipse.emf.validation.constraintProviders">
      <category
            id="com.mmxlabs.trading.integration.validation.base"
            mandatory="true"
            name="Trading Integration Validation">
      </category>
      <constraintProvider
            cache="true">
         <package
               namespaceUri="http://www.mmxlabs.com/models/lng/cargo/1/">
         </package>
         <constraints
               categories="com.mmxlabs.trading.integration.validation.base">
            <constraint
                  class="com.mmxlabs.trading.integration.validation.SingleMissingPriceConstraint"
                  id="com.mmxlabs.trading.integration.validation.SingleMissingPriceConstraint"
                  isEnabledByDefault="true"
                  lang="Java"
                  mode="Batch"
                  name="Missing Price Constraint"
                  severity="ERROR"
                  statusCode="1">
               <message>
                  {0}
               </message>
               <target
                     class="Cargo">
               </target>
            </constraint>
            <constraint
                  class="com.mmxlabs.trading.integration.validation.BreakEvenCharterOutConstraint"
                  id="com.mmxlabs.trading.integration.validation.BreakEvenCharterOutConstraint"
                  isEnabledByDefault="true"
                  lang="Java"
                  mode="Batch"
                  name="Break Even &amp; Charter Out Constraint"
                  severity="ERROR"
                  statusCode="1">
               <message>
                  {0}
               </message>
               <target
                     class="Slot">
               </target>
            </constraint>
         </constraints>
      </constraintProvider>
   </extension>

</plugin>
