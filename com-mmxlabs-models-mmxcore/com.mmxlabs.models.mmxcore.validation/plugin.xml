<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.emf.validation.constraintProviders">
      <category
            id="com.mmxlabs.models.mmxcore.validation.base"
            mandatory="true"
            name="MMXCore Validation">
      </category>
      <constraintProvider
            cache="true">
         <package
               namespaceUri="http://www.mmxlabs.com/models/mmxcore/1/">
         </package>
         <constraints
               categories=" com.mmxlabs.models.mmxcore.validation.base">
            <constraint
                  class="com.mmxlabs.models.mmxcore.validation.NameUniquenessConstraint"
                  id="com.mmxlabs.models.mmxcore.validation.NameUniquenessConstraint"
                  lang="Java"
                  mode="Batch"
                  name="Name Uniqueness"
                  severity="ERROR"
                  statusCode="1">
               <message>
                  {0} has non-unique name {1}
               </message>
               <description>
                  Named elements should have unique names.
               </description>
               <target
                     class="NamedObject">
               </target>
            </constraint>
            <constraint
                  class="com.mmxlabs.models.mmxcore.validation.NameSetConstraint"
                  id="com.mmxlabs.models.mmxcore.validation.NameSetConstraint"
                  isEnabledByDefault="true"
                  lang="Java"
                  mode="Batch"
                  name="Name or ID Valid"
                  severity="ERROR"
                  statusCode="1">
               <message>
                  {0} has an invalid {1} - the {1} must not be empty or composed of whitespace.
               </message>
               <description>
                  Things with names or ID fields (such as cargoes, vessel events, ports and so on) must have a name or ID set to a non-empty non-blank value.
               </description>
               <target
                     class="NamedObject">
               </target>
            </constraint>
         </constraints>
      </constraintProvider>
   </extension>

</plugin>
