<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.mmxlabs.parent</groupId>
		<artifactId>tycho-parent</artifactId>
		<version>31</version>
		<relativePath />
	</parent>
	<artifactId>com.mmxlabs.lingo.its</artifactId>
	<packaging>eclipse-test-plugin</packaging>
	<version>3.11.0-SNAPSHOT</version>

	<build>
		<plugins>

			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-maven-plugin</artifactId>
				<!-- Enable tycho packaging types -->
				<extensions>true</extensions>
			</plugin>

			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>target-platform-configuration</artifactId>
				<configuration>

					<resolver>p2</resolver>

					<target>
						<artifact>
							<groupId>com.mmxlabs.lingo.common.target</groupId>
							<artifactId>com.mmxlabs.lingo.common.target-definition</artifactId>
							<version>${project.version}</version>
						</artifact>
					</target>


					<environments>

						<environment>
							<os>linux</os>
							<ws>gtk</ws>
							<arch>x86_64</arch>
						</environment>
						<environment>
							<os>linux</os>
							<ws>gtk</ws>
							<arch>x86</arch>
						</environment>
						<environment>
							<os>win32</os>
							<ws>win32</ws>
							<arch>x86</arch>
						</environment>
						<environment>
							<os>win32</os>
							<ws>win32</ws>
							<arch>x86_64</arch>
						</environment>
						<environment>
							<os>macosx</os>
							<ws>cocoa</ws>
							<arch>x86_64</arch>
						</environment>
					</environments>

					<dependency-resolution>
						<extraRequirements>
							<requirement>
								<type>eclipse-feature</type>
								<id>com.mmxlabs.lingo.feature</id>
								<versionRange>0.0.0</versionRange>
							</requirement>
						</extraRequirements>
					</dependency-resolution>

				</configuration>
			</plugin>



			<!-- Override parent pom defaults as changes to deps will not cause a 
				product refresh -->
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-packaging-plugin</artifactId>

				<configuration>
					<!-- Override the hg provider with the default provider -->
					<timestampProvider>default</timestampProvider>

					<!-- Add scm changeset to manifests -->
					<archive>
						<manifestEntries>
							<SCM-Revision>${changeSet}</SCM-Revision>
						</manifestEntries>
					</archive>
				</configuration>
			</plugin>


			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-surefire-plugin</artifactId>
				<configuration>

					<!-- Include non-standard test suffix -->
					<includes>
						<include>**/*Tests.*</include>
						<include>**/Test*.*</include>
						<include>**/*Test.*</include>
					</includes>

					<product>com.mmxlabs.lingo.product.product</product>
					<application>com.mmxlabs.lingo.app.application</application>

					<useUIHarness>true</useUIHarness>
					<useUIThread>true</useUIThread>

					<argLine>-Dlingo.suppress.dialogs=true -Dlingo.enc.keyfile=${lingo.enc.keyfile}</argLine>

					<!-- Automatically start these bundles at specified run level. These contain the services required for test execution -->
					<bundleStartLevel>

						<bundle>
							<id>org.eclipse.core.runtime</id>
							<level>1</level>
							<autoStart>true</autoStart>
						</bundle>
						<bundle>
							<id>org.eclipse.equinox.common</id>
							<level>2</level>
							<autoStart>true</autoStart>
						</bundle>
						<bundle>
							<id>org.eclipse.equinox.ds</id>
							<level>1</level>
							<autoStart>true</autoStart>
						</bundle>
						<bundle>
							<id>org.eclipse.equinox.event</id>
							<level>1</level>
							<autoStart>true</autoStart>
						</bundle>
						<bundle>
							<id>org.ops4j.peaberry.activation</id>
							<level>1</level>
							<autoStart>true</autoStart>
						</bundle>
						<bundle>
							<id>com.mmxlabs.optimiser.optimiser-common</id>
							<level>4</level>
							<autoStart>true</autoStart>
						</bundle>
						<bundle>
							<id>com.mmxlabs.optimiser.optimiser-core</id>
							<level>4</level>
							<autoStart>true</autoStart>
						</bundle>

						<bundle>
							<id>com.mmxlabs.optimiser.optimiser-lso</id>
							<level>4</level>
							<autoStart>true</autoStart>
						</bundle>
						<bundle>
							<id>com.mmxlabs.models.migration</id>
							<level>4</level>
							<autoStart>true</autoStart>
						</bundle>
						<bundle>
							<id>com.mmxlabs.models.migration.scenario</id>
							<level>4</level>
							<autoStart>true</autoStart>
						</bundle>
						<bundle>
							<id>com.mmxlabs.models.lng.liveevaluator</id>
							<level>4</level>
							<autoStart>true</autoStart>
						</bundle>
						<bundle>
							<id>com.mmxlabs.models.lng.transformer</id>
							<level>4</level>
							<autoStart>true</autoStart>
						</bundle>
						<bundle>
							<id>com.mmxlabs.models.lng.transformer.ui</id>
							<level>4</level>
							<autoStart>true</autoStart>
						</bundle>
						<bundle>
							<id>com.mmxlabs.scheduler.optimiser</id>
							<level>4</level>
							<autoStart>true</autoStart>
						</bundle>
						<bundle>
							<id>com.mmxlabs.lingo.extensions</id>
							<level>4</level>
							<autoStart>true</autoStart>
						</bundle>
						<bundle>
							<id>com.mmxlabs.lingo.its</id>
							<level>4</level>
							<autoStart>true</autoStart>
						</bundle>
					</bundleStartLevel>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<repositories>
		<repository>
			<id>com-mmxlabs-models-lng-transformer.hg</id>
			<url>https://server1.mmxlabs.com/nexus/service/local/repositories/mmxlabs-v2-unzip/content/com/mmxlabs/models/lng/transformer/com.mmxlabs.models.lng.transformer.p2/${project.version}/com.mmxlabs.models.lng.transformer.p2-${project.version}.zip-unzip/</url>
			<layout>p2</layout>
		</repository>
		<repository>
			<id>com-mmxlabs-lingo.hg</id>
			<url>https://server1.mmxlabs.com/nexus/service/local/repositories/mmxlabs-v2-unzip/content/com/mmxlabs/lingo/com.mmxlabs.lingo.product-definition/${project.version}/com.mmxlabs.lingo.product-definition-${project.version}.zip-unzip/</url>
			<layout>p2</layout>
		</repository>
	</repositories>


	<profiles>
		<!-- The quickTests profile skips the long running scenario tests -->
		<profile>
			<id>quickTests</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.eclipse.tycho</groupId>
						<artifactId>tycho-surefire-plugin</artifactId>
						<version>${tycho.version}</version>
						<configuration>
							<providerHint>junit47</providerHint>
          					<providerProperties>
								<groups>com.mmxlabs.lingo.its.tests.category.QuickTest</groups>
          					</providerProperties>
							<failIfNoTests>false</failIfNoTests>
							<!-- Only run Tests marked with the Quick Test annotation -->
							<group>com.mmxlabs.lingo.its.tests.category.QuickTest</group>
						</configuration>
					</plugin>
				</plugins>
			</build>

		</profile>
	</profiles>
</project>
