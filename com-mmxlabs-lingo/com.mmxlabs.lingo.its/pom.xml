<?xml version="1.0" encoding="UTF-8"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.mmxlabs.lingo</groupId>
		<artifactId>com.mmxlabs.lingo.parent</artifactId>
		<version>3.0.1-SNAPSHOT</version>
	</parent>
	<artifactId>com.mmxlabs.lingo.its</artifactId>
	<packaging>eclipse-test-plugin</packaging>
	<version>3.0.1-SNAPSHOT</version>

	<build>
		<plugins>


			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>target-platform-configuration</artifactId>
				<configuration>

					<environments>

						<environment>
							<os>linux</os>
							<ws>gtk</ws>
							<arch>x86_64</arch>
						</environment>
						<environment>
							<os>linux</os>
							<ws>gtk</ws>
							<arch>x86</arch>
						</environment>
						<environment>
							<os>win32</os>
							<ws>win32</ws>
							<arch>x86</arch>
						</environment>
						<environment>
							<os>win32</os>
							<ws>win32</ws>
							<arch>x86_64</arch>
						</environment>
						<environment>
							<os>macosx</os>
							<ws>cocoa</ws>
							<arch>x86</arch>
						</environment>
						<environment>
							<os>macosx</os>
							<ws>cocoa</ws>
							<arch>x86_64</arch>
						</environment>
					</environments>
				</configuration>
			</plugin>


			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-surefire-plugin</artifactId>
				<configuration>

					<!-- Include non-standard test suffix -->
					<includes>
						<include>**/*Tests.*</include>
						<include>**/Test*.*</include>
						<include>**/*Test.*</include>
					</includes>

					<product>com.mmxlabs.lingo.product.product</product>
					<application>com.mmxlabs.lingo.app.application</application>

					<useUIHarness>true</useUIHarness>
					<useUIThread>true</useUIThread>

					<dependencies>
						<dependency>
							<type>eclipse-feature</type>
							<artifactId>com.mmxlabs.lingo.feature</artifactId>
							<version>0.0.0</version>
						</dependency>
						<dependency>
							<type>eclipse-feature</type>
							<artifactId>com.mmxlabs.lingo.platform.feature</artifactId>
							<version>0.0.0</version>
						</dependency>
						<dependency>
							<type>eclipse-feature</type>
							<artifactId>com.mmxlabs.models.lng.transformer.its.feature</artifactId>
							<version>0.0.0</version>
						</dependency>
						<!-- <dependency> -->
						<!-- <type>eclipse-plugin</type> -->
						<!-- <artifactId>org.eclipse.equinox.ds</artifactId> -->
						<!-- <version>0.0.0</version> -->
						<!-- </dependency> -->
						<!-- <dependency> -->
						<!-- <type>eclipse-plugin</type> -->
						<!-- <artifactId>org.eclipse.sdk</artifactId> -->
						<!-- <version>0.0.0</version> -->
						<!-- </dependency> -->
						<!-- <dependency> -->
						<!-- <type>eclipse-plugin</type> -->
						<!-- <artifactId>org.ops4j.peaberry.activation</artifactId> -->
						<!-- <version>0.0.0</version> -->
						<!-- </dependency> -->
						<!-- Logging plug-ins -->
						<!-- <dependency> -->
						<!-- <type>eclipse-plugin</type> -->
						<!-- <artifactId>com.mmxlabs.rcp.logger</artifactId> -->
						<!-- <version>0.0.0</version> -->
						<!-- </dependency> -->
					</dependencies>

					<!-- Automatically start these bundles at specified run level. These 
						contain the services required for test execution -->
					<bundleStartLevel>

						<bundle>
							<id>org.eclipse.core.runtime</id>
							<level>1</level>
							<autoStart>true</autoStart>
						</bundle>
						<bundle>
							<id>org.eclipse.equinox.common</id>
							<level>2</level>
							<autoStart>true</autoStart>
						</bundle>
						<bundle>
							<id>org.eclipse.equinox.ds</id>
							<level>1</level>
							<autoStart>true</autoStart>
						</bundle>
						<bundle>
							<id>org.ops4j.peaberry.activation</id>
							<level>1</level>
							<autoStart>true</autoStart>
						</bundle>
						<bundle>
							<id>com.mmxlabs.optimiser.optimiser-common</id>
							<level>4</level>
							<autoStart>true</autoStart>
						</bundle>
						<bundle>
							<id>com.mmxlabs.optimiser.optimiser-core</id>
							<level>4</level>
							<autoStart>true</autoStart>
						</bundle>

						<bundle>
							<id>com.mmxlabs.optimiser.optimiser-lso</id>
							<level>4</level>
							<autoStart>true</autoStart>
						</bundle>
						<bundle>
							<id>com.mmxlabs.models.migration</id>
							<level>4</level>
							<autoStart>true</autoStart>
						</bundle>
						<bundle>
							<id>com.mmxlabs.models.migration.scenario</id>
							<level>4</level>
							<autoStart>true</autoStart>
						</bundle>
						<bundle>
							<id>com.mmxlabs.models.lng.liveevaluator</id>
							<level>4</level>
							<autoStart>true</autoStart>
						</bundle>
						<bundle>
							<id>com.mmxlabs.models.lng.transformer</id>
							<level>4</level>
							<autoStart>true</autoStart>
						</bundle>
						<bundle>
							<id>com.mmxlabs.models.lng.transformer.ui</id>
							<level>4</level>
							<autoStart>true</autoStart>
						</bundle>
						<bundle>
							<id>com.mmxlabs.scheduler.optimiser</id>
							<level>4</level>
							<autoStart>true</autoStart>
						</bundle>
						<bundle>
							<id>com.mmxlabs.lingo.extensions</id>
							<level>4</level>
							<autoStart>true</autoStart>
						</bundle>
						<bundle>
							<id>com.mmxlabs.lingo.its</id>
							<level>4</level>
							<autoStart>true</autoStart>
						</bundle>
					</bundleStartLevel>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<profiles>
		<!-- The quickTests profile skips the long running scenario tests -->
		<profile>
			<id>quickTests</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.eclipse.tycho</groupId>
						<artifactId>tycho-surefire-plugin</artifactId>
						<version>${tycho.version}</version>
						<configuration>
							<failIfNoTests>false</failIfNoTests>
							<excludes>
								<exclude>**/OptimisationRepeatabilityTest.*</exclude>
								<exclude>**/TestOptimisationResult*.*</exclude>
								<exclude>**/TestDemoCases*.*</exclude>
								<exclude>**/TestCSVDemoCases*.*</exclude>
							</excludes>
						</configuration>
					</plugin>
				</plugins>
			</build>

		</profile>

		<!-- Enable this profile to run the its test independently of the full 
			build. -->
		<profile>
			<id>useSnapshotsRepo</id>
			<repositories>
				<repository>
					<id>mmxlabs-p2-snapshots</id>
					<url>https://s3-proxy.appspot.com/mmxlabs-p2-repos/repositories/com.mmxlabs.lingo/nightly/</url>
					<layout>p2</layout>
				</repository>
			</repositories>
		</profile>
	</profiles>
</project>
