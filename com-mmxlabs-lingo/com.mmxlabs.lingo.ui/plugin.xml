<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="com.mmxlabs.shiplingo.platform.ui.AnalysisPerspective"
            icon="icons/exec_statistic_view.gif"
            id="com.mmxlabs.lingo.app.perspective.analysis"
            name="Analysis">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="com.mmxlabs.lingo.app.perspective.analysis">
         <view
               closeable="false"
               id="com.mmxlabs.shiplingo.platform.reports.views.HorizontalKPIReportView"
               ratio="0.05"
               relationship="top"
               relative="org.eclipse.ui.editorss"
               showTitle="false"
               standalone="true">
         </view>
         <view
               closeable="true"
               id="com.mmxlabs.shiplingo.platform.reports.views.CargoEconsReport"
               minimized="true"
               ratio="0.85"
               relationship="right"
               relative="org.eclipse.ui.editorss"
               showTitle="false"
               standalone="false">
         </view>
         <view
               closeable="true"
               id="com.mmxlabs.shiplingo.platform.reports.views.PNLDetailsReport"
               minimized="true"
               ratio="0.85"
               relationship="right"
               relative="org.eclipse.ui.editorss"
               showTitle="false"
               standalone="false">
         </view>
         <viewShortcut
               id="com.mmxlabs.shiplingo.platform.reports.views.PNLDetailsReport">
         </viewShortcut>
         
