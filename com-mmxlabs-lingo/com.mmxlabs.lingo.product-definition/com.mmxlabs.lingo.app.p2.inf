# tell pde.build not to generate start levels
org.eclipse.pde.build.append.startlevels=false

# disable listing of feature in any category
properties.1.name=org.eclipse.equinox.p2.type.category
properties.1.value=false

instructions.configure=\
org.eclipse.equinox.p2.touchpoint.natives.remove(path:${installFolder}/eclipsec.exe); \
org.eclipse.equinox.p2.touchpoint.natives.remove(path:${installFolder}/LiNGOc.exe); \
org.eclipse.equinox.p2.touchpoint.eclipse.addProgramArg(programArg:-eclipse.keyring); org.eclipse.equinox.p2.touchpoint.eclipse.addProgramArg(programArg:secure_storage);

instructions.unconfigure=\
org.eclipse.equinox.p2.touchpoint.eclipse.removeProgramArg(programArg:-eclipse.keyring); org.eclipse.equinox.p2.touchpoint.eclipse.removeProgramArg(programArg:secure_storage); \
org.eclipse.equinox.p2.touchpoint.eclipse.removeProgramArg(programArg:-automem);
 
 