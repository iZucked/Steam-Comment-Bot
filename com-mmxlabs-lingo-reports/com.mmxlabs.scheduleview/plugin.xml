<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="Schedule Views"
            id="com.mmxlabs.scheduleview">
      </category>
      <view
            name="Scheduler View"
            icon="icons/sample.gif"
            category="com.mmxlabs.scheduleview"
            class="com.mmxlabs.scheduleview.views.SchedulerView"
            id="com.mmxlabs.scheduleview.views.SchedulerView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.TaskList"
               relationship="right"
               id="com.mmxlabs.scheduleview.views.SchedulerView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>

</plugin>
