<?eclipse version="3.4"?>
<plugin>
	<extension point="org.eclipse.ui.perspectives">
		<perspective class="com.mmxlabs.lingo.reports.diff.DiffPerspective"
			id="com.mmxlabs.lingo.reports.diff.DiffPerspective" name="Compare" icon="icons/cview16/changes_view.gif">
		</perspective>
	</extension>
	<extension point="org.eclipse.ui.views">
		<view class="com.mmxlabs.lingo.reports.diff.DiffGroupView" id="com.mmxlabs.lingo.reports.diff.DiffGroupView"
			name="Changes" restorable="true" icon="icons/cview16/changes_view.gif">
		</view>
	</extension>

	<extension point="org.eclipse.ui.actionSets">
		<actionSet id="com.mmxlabs.lingo.reports.diff.actionset"
			label="Change Set Tools">
			<action
				class="com.mmxlabs.lingo.reports.services.handlers.FilterScheduleReportBySelectionAction"
				icon="icons/FilterBySelection.gif"
				id="com.mmxlabs.lingo.reports.services.handlers.FilterScheduleReportBySelectionAction"
				label="Filter Schedule Report" style="toggle" toolbarPath="additions">
			</action>
			<action
				class="com.mmxlabs.lingo.reports.services.handlers.FilterScheduleChartBySelectionAction"
				icon="icons/filterGantt.gif"
				id="com.mmxlabs.lingo.reports.services.handlers.FilterScheduleReportBySelectionAction"
				label="Filter Schedule" style="toggle" toolbarPath="additions">
			</action>
		</actionSet>
	</extension>
	<extension point="org.eclipse.ui.perspectiveExtensions">
		<perspectiveExtension targetID="*">
			<perspectiveShortcut id="com.mmxlabs.lingo.reports.diff.DiffPerspective">
			</perspectiveShortcut>
		</perspectiveExtension>
	</extension>
	<extension point="com.mmxlabs.lingo.reports.FleetBasedColumn">
		<FleetBasedColumn
			handlerID="com.mmxlabs.lingo.reports.views.fleet.StandardFleetColumnFactory"
			id="com.mmxlabs.lingo.reports.components.columns.fleet.diff_selection_gco">
		</FleetBasedColumn>
	</extension>
	<extension point="com.mmxlabs.lingo.reports.ScheduleBasedColumn">
		<ScheduleBasedColumn
			handlerID="com.mmxlabs.lingo.reports.components.columns.StandardScheduleColumnFactory"
			id="com.mmxlabs.lingo.reports.components.columns.schedule.diff_permutation_group_pnldelta">
		</ScheduleBasedColumn>
		<ScheduleBasedColumn
			handlerID="com.mmxlabs.lingo.reports.components.columns.StandardScheduleColumnFactory"
			id="com.mmxlabs.lingo.reports.components.columns.schedule.diff_permutation">
		</ScheduleBasedColumn>
		<ScheduleBasedColumn
			handlerID="com.mmxlabs.lingo.reports.components.columns.StandardScheduleColumnFactory"
			id="com.mmxlabs.lingo.reports.components.columns.schedule.diff_permutation_group">
		</ScheduleBasedColumn>
		<ScheduleBasedColumn
			handlerID="com.mmxlabs.lingo.reports.components.columns.StandardScheduleColumnFactory"
			id="com.mmxlabs.lingo.reports.components.columns.schedule.diff_changestring">
		</ScheduleBasedColumn>
		<ScheduleBasedColumn
			handlerID="com.mmxlabs.lingo.reports.components.columns.StandardScheduleColumnFactory"
			id="com.mmxlabs.lingo.reports.components.columns.schedule.diff_lateness">
		</ScheduleBasedColumn>
		<ScheduleBasedColumn
			handlerID="com.mmxlabs.lingo.reports.components.columns.StandardScheduleColumnFactory"
			id="com.mmxlabs.lingo.reports.components.columns.schedule.diff_capacity_violation">
		</ScheduleBasedColumn>
	</extension>
	<extension point="com.mmxlabs.lingo.reports.ScheduleBasedReportInitialState">
		<ScheduleBasedReportInitialState
			customisable="true"
			id="com.mmxlabs.shiplingo.platform.reports.views.SchedulePnLReport">
			<InitialColumn
				id="com.mmxlabs.lingo.reports.components.columns.schedule.diff_permutation_group_pnldelta">
			</InitialColumn>
			<InitialColumn
				id="com.mmxlabs.lingo.reports.components.columns.schedule.diff_permutation_group">
			</InitialColumn>
			<InitialColumn
				id="com.mmxlabs.lingo.reports.components.columns.schedule.diff_changestring">
			</InitialColumn>
			<InitialColumn
				id="com.mmxlabs.lingo.reports.components.columns.schedule.diff_capacity_violation">
			</InitialColumn>
			<InitialColumn
				id="com.mmxlabs.lingo.reports.components.columns.schedule.diff_lateness">
			</InitialColumn>
		</ScheduleBasedReportInitialState>
	</extension>
	<extension
         id="com.mmxlabs.lingo.reports.fragment"
         point="org.eclipse.e4.workbench.model">
      <fragment
            apply="always"
            uri="fragment.e4xmi">
      </fragment>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:com.mmxlabs.scenario.service.ui.navigator">
         <command
               commandId="com.mmxlabs.lingo.reports.changeset.analyse"
               icon="icons/cview16/changes_view.gif"
               label="Open action sets"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <and>
                  <with
                        variable="selection">
                     <iterate
                           ifEmpty="false">
                        <instanceof
                              value="com.mmxlabs.scenario.service.model.ScenarioInstance">
                        </instanceof>
                     </iterate>
                  </with>
                  <count
                        value="1">
                  </count>
               </and>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="com.mmxlabs.lingo.reports.changeset.analyse"
            name="Open action sets">
      </command>
   </extension>
   
</plugin>
