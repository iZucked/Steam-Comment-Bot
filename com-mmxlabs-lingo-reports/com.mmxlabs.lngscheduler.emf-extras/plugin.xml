<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.emf.validation.constraintProviders">
      <category
            id="com.mmxlabs.lngscheduler.emf-extras.constraints"
            name="Scenario Constraints">
      </category>
      <constraintProvider
            cache="true">
         <!-- 
         	Multiple package statements are required because there's no recursive package inclusion  -->
         <package namespaceUri="http://www.eclipse.org/emf/2002/Ecore"/>
         <package namespaceUri="http://com.mmxlabs.lng.emf2" />
         <package namespaceUri="http://com.mmxlabs.lng.emf2/fleet" />
         <package namespaceUri="http://com.mmxlabs.lng.emf2/cargo" />
         <package namespaceUri="http://com.mmxlabs.lng.emf2/port" />
         <package namespaceUri="http://com.mmxlabs.lng.emf2/schedule" />
         <package namespaceUri="http://com.mmxlabs.lng.emf2/contract" />
         <package namespaceUri="http://com.mmxlabs.lng.emf2/market" />
         
         <constraints
               categories="com.mmxlabs.lngscheduler.emf-extras.constraints">
            <constraint
            	class="com.mmxlabs.lngscheduler.emf.extras.validation.CargoVolumeConstraint"
            	id="com.mmxlabs.lngscheduler.emf-extras.constraints.cargo_volumes"
            	lang="Java"
            	mode="Batch"
            	name="Cargo Volumes"
            	severity="ERROR"
            	statusCode="1">
            	<message>
            		Cargo {0} has invalid minimum and maximum load volumes.
            	</message>
            	<description>
            		A cargo's maximum load volume should exceed its minimum discharge volume, and 
            		its minimum load volume should not exceed its maximimum discharge volume.
            	</description>
            	<target class="Cargo" />
            </constraint>
            
            <constraint
            	class="com.mmxlabs.lngscheduler.emf.extras.validation.CargoDateConstraint"
            	id="com.mmxlabs.lngscheduler.emf-extras.constraints.cargo_order"
            	lang="Java"
            	mode="Batch"
            	name="Load and discharge order"
            	severity="ERROR"
            	statusCode="1">
            	<message>
            		Cargo {0} has invalid load and discharge dates - the load occurs after the discharge.
            	</message>
            	<description>
            		The end of the discharge slot's time window should be after the start of the load slot's time window.
            	</description>
            	<target class="Cargo" />
            </constraint>
            
            <constraint
            	class="com.mmxlabs.lngscheduler.emf.extras.validation.CargoDateConstraint"
            	id="com.mmxlabs.lngscheduler.emf-extras.constraints.cargo_travel_time"
            	lang="Java"
            	mode="Batch"
            	name="Cargo Travel Time"
            	severity="ERROR"
            	statusCode="1">
            	<message>
            		Cargo {0} does not have enough travel time - {1} hours are required for the journey, but only {2} hours
            		are available.
            	</message>
            	<description>
            		The load and discharge dates for a cargo should allow enough time between them for
            		the fastest fleet vessel to make the journey at maximum speed.
            	</description>
            	<target class="Cargo" />
            </constraint>

             <constraint
            	class="com.mmxlabs.lngscheduler.emf.extras.validation.CargoDateConstraint"
            	id="com.mmxlabs.lngscheduler.emf-extras.constraints.cargo_available_time"
            	lang="Java"
            	mode="Batch"
            	name="Cargo Travel Time"
            	severity="ERROR"
            	statusCode="1">
            	<message>
            		Cargo {0} has a very large amount of travel time allocated - {1} days are allocated, and {2} is a sensible upper bound.
            	</message>
            	<description>
            		If a cargo has a very large amount of slack in its travel time, lots of fuel will be wasted idling at the destination
            		port. This often indicates a typographical error when entering dates.
            	</description>
            	<target class="Cargo" />
            </constraint>
            
            <constraint
                  class="com.mmxlabs.lngscheduler.emf.extras.validation.SlotVolumeConstraint"
                  id="com.mmxlabs.lngscheduler.emf-extras.constraints.slot_volumes"
                  lang="Java"
                  mode="Batch"
                  name="Slot Volumes"
                  severity="ERROR"
                  statusCode="1">
               <message>
                  A slot has invalid minimum and maximum load volumes.
               </message>
               <description>
                  Every slot's minimum and maximum volume should be non-negative, and the minimum should not exceed the maximum.
               </description>
               <target class="Slot" />
            </constraint>
			<!--
           	<constraint
                  class="com.mmxlabs.lngscheduler.emf.extras.validation.InitialStateFeasibilityConstraint"
                  id="com.mmxlabs.lngscheduler.emf-extras.constraints.initial_feasibility"
                  lang="Java"
                  mode="Batch"
                  name="Initial State Feasibility"
                  severity="ERROR"
                  statusCode="1">
               <message>
                  Scenario {0} has no feasible initial solution ({1}).
               </message>
               <description>
                  The optimiser either needs a feasible initial solution, or the solution construction heuristic must be able to find one.
                  If it can't find a start solution, we cannot proceed.
               </description>
               <target class="Scenario" />
            </constraint>
			-->
            <constraint
            	class="com.mmxlabs.lngscheduler.emf.extras.validation.SequenceNoGapsConstraint"
            	id="com.mmxlabs.lngscheduler.emf-extras.constraints.sequence_gaps"
            	lang="Java"
            	mode="Batch"
            	name="Sequence Gaps"
            	severity="ERROR"
            	statusCode="1">
            	<message>
            		Vessel {0}'s schedule has gaps between events
            	</message>
            	<description>
            		There should be no time in a vessel's schedule which has not been accounted for. If you have
            		deleted something from the problem definition you may need to re-evaluate the scenario to ensure
            		that no schedules have gaps in them.
            	</description>
            	<target class="Sequence" />
            </constraint>
            
             <constraint
            	class="com.mmxlabs.lngscheduler.emf.extras.validation.DistanceLineValidityConstraint"
            	id="com.mmxlabs.lngscheduler.emf-extras.constraints.distanceline_distance"
            	lang="Java"
            	mode="Batch"
            	name="Distance Line From Port"
            	severity="ERROR"
            	statusCode="1">
            	<message>
            		Distance line from {0} to {1} has distance {2}
            	</message>
            	<description>
            		Entries in the distance matrix must be non-negative and not exceed 10,000 nautical miles.
            	</description>
            	<target class="DistanceLine" />
            </constraint>
            <constraint
            	class="com.mmxlabs.lngscheduler.emf.extras.validation.NullReferenceConstraint"
            	id="com.mmxlabs.lngscheduler.emf-extras.constraints.null_references"
            	lang="Java"
            	mode="Batch"
            	name="Null References"
            	severity="ERROR"
            	statusCode="1">
            	<message>
            		This attribute must be set.
            	</message>
            	<description>
            		Some references should not be null.
            	</description>
            	<target class="Port" />
            	<target class="Cargo" />
            	<target class="Contract" />
            	<target class="DistanceLine" />
            	<target class="Vessel" />
            	<target class="VesselClass" />
            	<target class="CharterOut" />
            	<target class="VesselEvent" />
            	<target class="PortAndTime" />
             <target
                   class="VesselEvent">
             </target>
            </constraint>
            <constraint
            	class="com.mmxlabs.lngscheduler.emf.extras.validation.NameUniquenessConstraint"
            	id="com.mmxlabs.lngscheduler.emf-extras.constraints.unique_names"
            	lang="Java"
            	mode="Batch"
            	name="Name Uniqueness"
            	severity="ERROR"
            	statusCode="1">
            	<message>
            		{0} has non-unique name {1}
            	</message>
            	<description>
            		Named elements should have unique names.
            	</description>
            	<target class="NamedObject" />
            	<target class="Cargo" />
             <target
                   class="VesselEvent">
             </target>
            </constraint>
            <constraint
                  class="com.mmxlabs.lngscheduler.emf.extras.validation.PortContentionConstraint"
                  id="com.mmxlabs.lngscheduler.emf-extras.port_contention"
                  isEnabledByDefault="true"
                  lang="Java"
                  mode="Batch"
                  name="Port Contention"
                  severity="WARNING"
                  statusCode="1">
               <message>
                  Slot {0} is in contention with slots {2} at port {1}.</message>
               <description>
                  Some ports may not allow multiple vessels to be in port contemporaneously. This constraint checks whether two slots at the same port have overlapping time windows, and so could cause a problem with this.
               </description>
               <target
                     class="Slot">
               </target>
            </constraint>
            
            <constraint
                  class="com.mmxlabs.lngscheduler.emf.extras.validation.VesselClassSpeedConstraint"
                  id="com.mmxlabs.lngscheduler.emf-extras.vessel_class_min_speed"
                  isEnabledByDefault="true"
                  lang="Java"
                  mode="Batch"
                  name="Minimum Speed Within Curve"
                  severity="ERROR"
                  statusCode="1">
               <message>
               	  The minimum speed of {0} knots is outside the range of speeds in the fuel consumption curve ({1} to {2} knots).   
               </message>
               <description>
               		The minimum speed of a vessel class must be somewhere within the upper bounds of its fuel consumption curve.   
               </description>
               <target
                     class="VesselClass">
               </target>
            </constraint>
            
            <constraint
                  class="com.mmxlabs.lngscheduler.emf.extras.validation.VesselClassSpeedConstraint"
                  id="com.mmxlabs.lngscheduler.emf-extras.vessel_class_max_speed"
                  isEnabledByDefault="true"
                  lang="Java"
                  mode="Batch"
                  name="Maximum Speed Within Curve"
                  severity="ERROR"
                  statusCode="1">
               <message>
               	  The maximum speed of {0} knots is outside the range of speeds in the fuel consumption curve ({1} to {2} knots).   
               </message>
               <description>
               		The maximum speed of a vessel class must be somewhere within the upper bounds of its fuel consumption curve.   
               </description>
               <target
                     class="VesselClass">
               </target>
            </constraint>
            
            <constraint
                  class="com.mmxlabs.lngscheduler.emf.extras.validation.VesselClassSpeedConstraint"
                  id="com.mmxlabs.lngscheduler.emf-extras.vessel_class_speed_order"
                  isEnabledByDefault="true"
                  lang="Java"
                  mode="Batch"
                  name="Minimum Speed is Lower than Maximum Speed"
                  severity="ERROR"
                  statusCode="1">
               <message>
               	  Vessel class {0} has a minimum speed of {1}, which is not lower than its maximum speed of {2}.
               </message>
               <description>
               		The minimum speed of a vessel class should be lower than its maximum speed.
               </description>
               <target
                     class="VesselClass">
               </target>
            </constraint>
           
            <constraint
                  class="com.mmxlabs.lngscheduler.emf.extras.validation.ShipFillPercentageConstraint"
                  id="com.mmxlabs.lngscheduler.emf-extras.constraints.ship_fill_validity"
                  isEnabledByDefault="true"
                  lang="Java"
                  mode="Batch"
                  name="Ship Fill Percentage is Valid"
                  severity="ERROR"
                  statusCode="1">
               <message>
               	  Vessel {0} has a fill capacity of {1} percent, which is not between 0 (exclusive) and 100 (inclusive). 
               </message>
               <description>
               		Fill capacity should not be zero, negative or exceed 100 percent.
               </description>
               <target
                     class="VesselClass">
               </target>
            </constraint>
            
            <constraint
                  class="com.mmxlabs.lngscheduler.emf.extras.validation.ShipFillPercentageConstraint"
                  id="com.mmxlabs.lngscheduler.emf-extras.constraints.ship_fill_sanity"
                  isEnabledByDefault="true"
                  lang="Java"
                  mode="Batch"
                  name="Ship Fill Percentage is low"
                  severity="WARNING"
                  statusCode="1">
               <message>
               	  Vessel {0} has a fill capacity of {1} percent, which is less than the sensible threshold of {2} percent. 
               </message>
               <description>
               		Fill capacity should not be too low.
               </description>
               <target
                     class="VesselClass">
               </target>
            </constraint>
            
             <constraint
            	class="com.mmxlabs.lngscheduler.emf.extras.validation.StartEndRequirementDateConstraint"
            	id="com.mmxlabs.lngscheduler.emf-extras.constraints.start_end_requirement_date_order"
            	lang="Java"
            	mode="Batch"
            	name="Start / End Date Consistency"
            	severity="ERROR"
            	statusCode="1">
            	<message>
            		Vessel {0}'s {1} requirement has inconsistent start and end dates set (the start date is after the end date).
            	</message>
            	<description>
            		The start end end window of a vessel event must be set and consistent.
            	</description>
            	<target class="PortAndTime" />
            </constraint>
            
            <constraint
            	class="com.mmxlabs.lngscheduler.emf.extras.validation.StartEndRequirementPortConstraint"
            	id="com.mmxlabs.lngscheduler.emf-extras.constraints.start_end_requirement_port_access"
            	lang="Java"
            	mode="Batch"
            	name="Start / End Port Accessibility"
            	severity="ERROR"
            	statusCode="1">
            	<message>
            		Vessel {0}'s {1} requirement is set for port {3}, but the vessel is of class {2} which cannot dock at {3}.
            	</message>
            	<description>
            		The start or end port of a vessel must be compatible with that vessel's class
            	</description>
            	<target class="PortAndTime" />
            </constraint>
            
            <constraint
            	class="com.mmxlabs.lngscheduler.emf.extras.validation.StartEndRequirementPortConstraint"
            	id="com.mmxlabs.lngscheduler.emf-extras.constraints.start_end_requirement_port_access_2"
            	lang="Java"
            	mode="Batch"
            	name="Start / End Port Accessibility"
            	severity="ERROR"
            	statusCode="1">
            	<message>
            		The vessels {0} have start / end requirements at the ports {1}, which are in the inaccessible port list.
            	</message>
            	<description>
            		The start or end port of a vessel must be compatible with that vessel's class
            	</description>
            	<target class="VesselClass" />
            </constraint>
            
             <constraint
            	class="com.mmxlabs.lngscheduler.emf.extras.validation.VesselEventDateConstraint"
            	id="com.mmxlabs.lngscheduler.emf-extras.constraints.vessel_event_date_order"
            	lang="Java"
            	mode="Batch"
            	name="Vessel Event Date Consistency"
            	severity="ERROR"
            	statusCode="1">
            	<message>
            		Vessel Event {0} has invalid start and end dates - they must both be set, and the start date must be before the end date.
            	</message>
            	<description>
            		The start end end window of a vessel event must be set and consistent.
            	</description>
            	<target class="VesselEvent" />
            </constraint>
            
			<constraint
            	class="com.mmxlabs.lngscheduler.emf.extras.validation.CanalCostConstraint"
            	id="com.mmxlabs.lngscheduler.emf-extras.constraints.canal_costs_present"
            	lang="Java"
            	mode="Batch"
            	name="Canal Costs Specified"
            	severity="WARNING"
            	statusCode="1">
            	<message>
            		Vessel class {0} has no canal costs specified for canal {1}.
            	</message>
            	<description>
            		All vessel classes should probably have canal costs set.
            	</description>
            	<target class="VesselClass" />
            </constraint>
			<constraint
            	class="com.mmxlabs.lngscheduler.emf.extras.validation.CanalCostConstraint"
            	id="com.mmxlabs.lngscheduler.emf-extras.constraints.canal_costs_positive"
            	lang="Java"
            	mode="Batch"
            	name="Canal Costs Sensible"
            	severity="WARNING"
            	statusCode="1">
            	<message>
            		Vessel class {0} has non-positive costs specified for canal {1}.
            	</message>
            	<description>
            		All vessel classes should probably have positive canal costs for all canals.
            	</description>
            	<target class="VesselClassCost" />
            </constraint>
            
         </constraints>
      </constraintProvider>
   </extension>
   <extension
         point="org.eclipse.emf.validation.constraintBindings">
      <clientContext
            default="false"
            id="com.mmxlabs.lngscheduler.emf-extras.scenarioContext">
         <selector
               class="com.mmxlabs.lngscheduler.emf.extras.validation.ScenarioClientSelector">
         </selector>
      </clientContext>
      <binding
            category="com.mmxlabs.lngscheduler.emf-extras.constraints"
            context="com.mmxlabs.lngscheduler.emf-extras.scenarioContext">
      </binding>
   </extension>
   <extension
         point="org.eclipse.emf.validation.ui.UIRegisteredClientContext">
      <clientContext id="com.mmxlabs.lngscheduler.emf-extras.scenarioContext"/>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <viewerContribution
            id="org.eclipse.emf.validation.examples.general.viewerContribution"
            targetID="scenario.presentation.ScenarioEditorID">
         <menu
               id="org.eclipse.emf.validationMenuID"
               label="Validation"
               path="additions">
            <separator
                  name="additions">
            </separator>
         </menu>
         <action
               class="com.mmxlabs.lngscheduler.emf.extras.actions.BatchValidationDelegate"
               icon="$nl$/icons/elcl16/validate_co.gif"
               id="org.eclipse.emf.validation.pde.example.general.ui.validateAction"
               label="Validate Elements"
               menubarPath="org.eclipse.emf.validationMenuID/additions">
         </action>
      </viewerContribution>
   </extension> 
</plugin>
