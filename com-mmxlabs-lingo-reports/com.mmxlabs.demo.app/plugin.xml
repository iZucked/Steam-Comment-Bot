<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="com.mmxlabs.demo.app.intro.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Scheduling"
            class="com.mmxlabs.demo.app.intro.Perspective"
            id="com.mmxlabs.demo.app.perspective">
      </perspective>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="com.mmxlabs.demo.app.application"
            name="ShipLiNGO">
         <property
               name="windowImages"
               value="icons/alt_window_16.gif,icons/alt_window_16.gif">
         </property>
         <property
               name="appName"
               value="ShipLiNGO">
         </property>
         <property
               name="startupForegroundColor"
               value="000000">
         </property>
         <property
               name="startupMessageRect"
               value="20,220,440,20">
         </property>
         <property
               name="startupProgressRect"
               value="20,210,440,15">
         </property>
         <property
               name="preferenceCustomization"
               value="plugin_customization.ini">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.intro">
      <intro
            class="org.eclipse.ui.intro.config.CustomizableIntroPart"
            id="com.mmxlabs.demo.app.intro">
      </intro>
      <introProductBinding
            introId="com.mmxlabs.demo.app.intro"
            productId="com.mmxlabs.demo.app.product">
      </introProductBinding>
   </extension>
   <extension
         point="org.eclipse.ui.intro.config">
      <config
            introId="com.mmxlabs.demo.app.intro"
            content="introContent.xml"
            id="com.mmxlabs.demo.app.configId">
         <presentation
               home-page-id="root">
            <implementation
                  kind="html"
                  os="win32,linux,macosx">
            </implementation>
         </presentation>
      </config>
   </extension>
   <extension
         point="org.eclipse.ui.intro.configExtension">
      <configExtension
            content="ext.xml"
            configId="com.mmxlabs.demo.app.configId">
      </configExtension>
   </extension>
   <extension
         point="org.eclipse.ui.viewActions">
      <viewContribution
            id="com.mmxlabs.demo.app.navigatorOptimiseButton"
            targetID="org.eclipse.ui.views.ResourceNavigator">
         <action
               class="com.mmxlabs.demo.app.actions.OptimiseActionDelegate"
               enablesFor="+"
               id="com.mmxlabs.demo.app.optimiseaction"
               label="Optimise"
               style="push"
               toolbarPath="LiNGO"
               tooltip="Start an optimisation job for the selection">
            <selection
                  class="org.eclipse.core.resources.IFile"
                  name="*.scenario">
            </selection>
         </action>
      </viewContribution>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            class="com.mmxlabs.demo.app.wizards.RandomScenarioWizard"
            id="com.mmxlabs.demo.app.randomscenariowizard"
            name="New Random Scenario">
      </wizard>
   </extension>


</plugin>
