<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd">


	<!-- Constraint checker factories -->
	<bean id="constraintCheckerRegistry"
		class="com.mmxlabs.optimiser.core.constraints.impl.ConstraintCheckerRegistry">
		<property name="constraintCheckerFactories">
			<list>
				<bean
					class="com.mmxlabs.optimiser.common.constraints.OrderedSequenceElementsConstraintCheckerFactory">
					<constructor-arg>
						<util:constant
							static-field="com.mmxlabs.scheduler.optimiser.SchedulerConstants.DCP_orderedElementsProvider" />
					</constructor-arg>
				</bean>

				<bean
					class="com.mmxlabs.optimiser.common.constraints.ResourceAllocationConstraintCheckerFactory">
					<constructor-arg>
						<util:constant
							static-field="com.mmxlabs.scheduler.optimiser.SchedulerConstants.DCP_resourceAllocationProvider" />
					</constructor-arg>
				</bean>

				<bean
					class="com.mmxlabs.scheduler.optimiser.constraints.impl.PortTypeConstraintCheckerFactory">
					<constructor-arg>
						<util:constant
							static-field="com.mmxlabs.scheduler.optimiser.SchedulerConstants.DCP_portTypeProvider" />
					</constructor-arg>
					<constructor-arg>
						<util:constant
							static-field="com.mmxlabs.scheduler.optimiser.SchedulerConstants.DCP_vesselProvider" />
					</constructor-arg>
				</bean>

				<bean
					class="com.mmxlabs.scheduler.optimiser.constraints.impl.TravelTimeConstraintCheckerFactory">
				</bean>
