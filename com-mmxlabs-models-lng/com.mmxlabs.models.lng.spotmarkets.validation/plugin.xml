<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.emf.validation.constraintProviders">
      <category
            id="com.mmxlabs.models.lng.spotmarkets.validation.base"
            mandatory="true"
            name="Spot Markets Validation">
      </category>
      <constraintProvider
            cache="true">
         <package
               namespaceUri="http://www.mmxlabs.com/models/lng/spotmarkets/1/">
         </package>
         <constraints
               categories=" com.mmxlabs.models.lng.spotmarkets.validation.base">
            <constraint
                  class="com.mmxlabs.models.lng.spotmarkets.validation.SpotMarketConstraint"
                  id="com.mmxlabs.models.lng.spotmarkets.validation.SpotMarketConstraint"
                  isEnabledByDefault="true"
                  lang="Java"
                  mode="Batch"
                  name="Spot Market Constraint"
                  severity="ERROR"
                  statusCode="1">
               <message>
                  {0}
               </message>
               <target
                     class="SpotMarket">
               </target>
            </constraint>
            <constraint
                  class="com.mmxlabs.models.lng.commercial.validation.util.PriceParameterConstraint"
                  id="com.mmxlabs.models.lng.spotmarkets.validation.PriceParameterConstraint"
                  isEnabledByDefault="true"
                  lang="Java"
                  mode="Batch"
                  name="Price Expression Constraint"
                  severity="ERROR"
                  statusCode="1">
               <message>
                  {0}
               </message>
               <target
                     class="SpotMarket">
               </target>
            </constraint>         
            </constraints>
      </constraintProvider>
   </extension>

</plugin>
