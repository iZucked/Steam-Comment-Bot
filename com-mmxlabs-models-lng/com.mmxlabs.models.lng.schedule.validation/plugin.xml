<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.emf.validation.constraintProviders">
      <category
            id="com.mmxlabs.models.lng.schedule.validation.backgroundonly"
            mandatory="true"
            name="Schedule Validation">
      </category>
      <category
            id="com.mmxlabs.models.lng.schedule.validation.base"
            mandatory="true"
            name="com.mmxlabs.models.lng.schedule.validation.base">
      </category>      
      
      <constraintProvider
            cache="true">
         <package
               namespaceUri="http://www.mmxlabs.com/models/lng/schedule/1/">
         </package>
         <constraints
               categories=" com.mmxlabs.models.lng.schedule.validation.backgroundonly">
               
                <constraint
                      class="com.mmxlabs.models.lng.schedule.validation.SequenceNoGapsConstraint"
                      id="com.mmxlabs.models.lng.schedule.validation.SequenceNoGapsConstraint"
                      isEnabledByDefault="false"
                      lang="Java"
                      mode="Batch"
                      name="Sequence Gaps"
                      severity="ERROR"
                      statusCode="1">
                <message>
                    Vessel {0}'s schedule has gaps between events
                </message>
                <description>
                    There should be no time in a vessel's schedule which has not been accounted for. If you have
                    deleted something from the problem definition you may need to re-evaluate the scenario to ensure
                    that no schedules have gaps in them.
                </description>
                <target class="Sequence" />
            </constraint>
                <constraint
                      class="com.mmxlabs.models.lng.schedule.validation.CapacityViolationConstraint"
                      id="com.mmxlabs.models.lng.schedule.validation.CapacityViolationConstraint"
                      isEnabledByDefault="true"
                      lang="Java"
                      mode="Batch"
                      name="Capacity Violations"
                      severity="WARNING"
                      statusCode="1">
                <message>
                    {0}
                </message>
            </constraint>
            <constraint
                      class="com.mmxlabs.models.lng.schedule.validation.LatenessConstraint"
                      id="com.mmxlabs.models.lng.schedule.validation.LatenessConstraint"
                      isEnabledByDefault="true"
                      lang="Java"
                      mode="Batch"
                      name="Lateness Violations"
                      severity="WARNING"
                      statusCode="1">
                <message>
                    {0}
                </message>
                <target class="Event"/>
            </constraint>
                        <constraint
                      class="com.mmxlabs.models.lng.schedule.validation.NegativePriceConstraint"
                      id="com.mmxlabs.models.lng.schedule.validation.NegativePriceConstraint"
                      isEnabledByDefault="true"
                      lang="Java"
                      mode="Batch"
                      name="Negative Error"
                      severity="WARNING"
                      statusCode="1">
                <message>
                    {0}
                </message>
                <target class="Event"/>
            </constraint>
         </constraints>
         <constraints></constraints>
      </constraintProvider>
      <constraintProvider
            cache="true">
         <package
               namespaceUri="http://www.mmxlabs.com/models/lng/port/1/">
         </package>
         <constraints
               categories="com.mmxlabs.models.lng.schedule.validation.base">
            <constraint
                  class="com.mmxlabs.models.lng.schedule.validation.PotentialMissingMissingDistancesConstraint"
                  id="com.mmxlabs.models.lng.schedule.validation.PotentialMissingMissingDistancesConstraint"
                  isEnabledByDefault="true"
                  lang="java"
                  mode="Batch"
                  name="Missing Distances"
                  severity="ERROR"
                  statusCode="1">
               <message>
                  {0}
               </message>
               <target
                     class="PortModel">
               </target>
            </constraint>
         </constraints>
      </constraintProvider>
    
   </extension>

</plugin>
