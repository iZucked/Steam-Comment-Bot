                  id="com.mmxlabs.models.lng.cargo.validation.CargoDateConstraint.cargo_order"
                  lang="Java"
                  mode="Batch"
                  name="Load and discharge order"
                  severity="ERROR"
                  statusCode="1">
               <message>
                  [Cargo|{0}] Load is after discharge (note timezone).
               </message>
               <description>
                  The end of the discharge slot's time window should be after the start of the load slot's time window.
               </description>
               <target
                     class="Cargo">
               </target>
            </constraint>
            <constraint
                  class="com.mmxlabs.models.lng.cargo.validation.CargoDateConstraint"
                  id="com.mmxlabs.models.lng.cargo.validation.CargoDateConstraint.cargo_available_time"
                  lang="Java"
                  mode="Batch"
                  name="Cargo Travel Time"
                  severity="ERROR"
                  statusCode="1">
               <message>
                  [Cargo|{0}] Travel time is excessive ({1} days); {2} is a sensible maximum.
               </message>
               <description>
                  If a cargo has a very large amount of slack in its travel time, lots of fuel will be wasted idling at the destination
            		port. This often indicates a typographical error when entering dates.
               </description>
               <target
                     class="Cargo">
               </target>
            </constraint>
            <constraint
                  class="com.mmxlabs.models.lng.cargo.validation.SlotVolumeConstraint"
                  id="com.mmxlabs.models.lng.cargo.validation.SlotVolumeConstraint"
                  lang="Java"
                  mode="Batch"
                  name="Slot Volumes"
                  severity="ERROR"
                  statusCode="1">
               <message>
                  [Slot|{0}] {1}
               </message>
               <description>
                  Every slot's minimum and maximum volume should be non-negative, and the minimum should not exceed the maximum.
               </description>
               <target
                     class="Slot">
               </target>
            </constraint>
            <constraint
                  class="com.mmxlabs.models.lng.cargo.validation.CargoDateConstraint"
                  id="com.mmxlabs.models.lng.cargo.validation.CargoDateConstraint.cargo_travel_time"
                  lang="Java"
                  mode="Batch"
                  name="Cargo Travel Time"
                  severity="ERROR"
                  statusCode="1">
               <message>
                  [Cargo|{0}] Travel time is too short (by {1}).
               </message>
               <description>
                  The load and discharge dates for a cargo should allow enough time between them for
            		the fastest fleet vessel to make the journey at maximum speed.
               </description>
               <target
                     class="Cargo">
               </target>
            </constraint>
            <constraint
