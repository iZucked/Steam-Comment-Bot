<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.emf.validation.constraintProviders">
      <category
            id="com.mmxlabs.models.lng.commercial.validation.base"
            mandatory="true"
            name="Commercial Validation">
      </category>
      <constraintProvider
            cache="true">
         <package
               namespaceUri="http://www.mmxlabs.com/models/lng/commercial/1/">
         </package>
         <constraints
               categories=" com.mmxlabs.models.lng.commercial.validation.base">
            <constraint
                  class="com.mmxlabs.models.lng.input.validation.NullReferenceConstraint"
                  id="com.mmxlabs.models.lng.commercial.validation"
                  isEnabledByDefault="true"
                  lang="Java"
                  mode="Batch"
                  name="Null Reference Constraint"
                  severity="ERROR"
                  statusCode="1">
               <message>
                  Reference cannot be null
               </message>
               <target
                     class="Contract">
               </target>
            </constraint>
         </constraints>
      </constraintProvider>
   </extension>

</plugin>
