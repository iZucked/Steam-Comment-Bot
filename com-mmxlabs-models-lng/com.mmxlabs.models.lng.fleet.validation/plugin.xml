<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.emf.validation.constraintProviders">
      <category
            id="com.mmxlabs.models.lng.fleet.validation.base"
            mandatory="true"
            name="Fleet Validation">
      </category>
      <constraintProvider
            cache="true">
         <package
               namespaceUri="http://www.mmxlabs.com/models/lng/fleet/1/">
         </package>
         <constraints
               categories=" com.mmxlabs.models.lng.fleet.validation.base">
          
            <constraint
                  class="com.mmxlabs.models.lng.fleet.validation.NullReferenceConstraint"
                  id="com.mmxlabs.models.lng.fleet.validation.NullReferenceConstraint"
                  lang="Java"
                  mode="Batch"
                  name="Null References"
                  severity="ERROR"
                  statusCode="1">
               <message>
                  The attribute(s) {0} must be set.
               </message>
               <description>
                  Some references should not be null.
               </description>
               <target
                     class="Vessel">
               </target>
               <target
                     class="VesselRouteParameters">
               </target>
            </constraint>
          
            <constraint
                  class="com.mmxlabs.models.lng.fleet.validation.VesselClassSpeedConstraint"
                  id="com.mmxlabs.models.lng.fleet.validation.VesselClassSpeedConstraint.min_speed"
                  isEnabledByDefault="true"
                  lang="Java"
                  mode="Batch"
                  name="Minimum Speed Within Curve"
                  severity="ERROR"
                  statusCode="1">
               <message>
                  [Vessel|{0}] {1} knots min speed is outside the range of the speed-fuel curve ({2} to {3} knots).
               </message>
               <description>
                  The minimum speed of a vessel must be somewhere within the upper bounds of its fuel consumption curve.
               </description>
               <target
                     class="Vessel">
               </target>
            </constraint>
            <constraint
                  class="com.mmxlabs.models.lng.fleet.validation.VesselAttributesRangeConstraint"
                  id="com.mmxlabs.models.lng.fleet.validation.VesselAttributesRangeConstraint"
                  isEnabledByDefault="true"
                  lang="Java"
                  mode="Batch"
                  name="Vessel Attributes Have Sensible Values"
                  severity="ERROR"
                  statusCode="1">
               <message>
                  {0}
               </message>
               <description>
                  Vessel state attributes must lie within sensible ranges.
               </description>
               <target
                     class="VesselStateAttributes">
               </target>
            </constraint>
            <constraint
                  class="com.mmxlabs.models.lng.fleet.validation.VesselClassSpeedConstraint"
                  id="com.mmxlabs.models.lng.fleet.validation.VesselClassSpeedConstraint.max_speed"
                  isEnabledByDefault="true"
                  lang="Java"
                  mode="Batch"
                  name="Maximum Speed Within Curve"
                  severity="ERROR"
                  statusCode="1">
               <message>
                  [Vessel|{0}] {1} knots max speed is outside the range of the speed-fuel curve ({2} to {3} knots).
               </message>
               <description>
                  The maximum speed of a vessel must be somewhere within the upper bounds of its fuel consumption curve.
               </description>
               <target
                     class="Vessel">
               </target>
            </constraint>
            <constraint
                  class="com.mmxlabs.models.lng.fleet.validation.VesselClassSpeedConstraint"
                  id="com.mmxlabs.models.lng.fleet.validation.VesselClassSpeedConstraint.speed_order"
                  isEnabledByDefault="true"
                  lang="Java"
                  mode="Batch"
                  name="Minimum Speed is Lower than Maximum Speed"
                  severity="ERROR"
                  statusCode="1">
               <message>
                  Vessel|{0}: Min speed ({1}) must be lower than max speed ({2}).
               </message>
               <description>
                  The minimum speed of a vessel should be lower than its maximum speed.
               </description>
               <target
                     class="Vessel">
               </target>
            </constraint>
            <constraint
                  class="com.mmxlabs.models.lng.fleet.validation.ShipFillPercentageConstraint"
                  id="com.mmxlabs.models.lng.fleet.validation.ShipFillPercentageConstraint.validity"
                  isEnabledByDefault="true"
                  lang="Java"
                  mode="Batch"
                  name="Ship Fill Percentage is Valid"
                  severity="ERROR"
                  statusCode="1">
               <message>
                  Vessel {0} has a fill capacity of {1} percent, which is not between 0 (exclusive) and 100 (inclusive).
               </message>
               <description>
                  Fill capacity should not be zero, negative or exceed 100 percent.
               </description>
               <target
                     class="Vessel">
               </target>
            </constraint>
            <constraint
                  class="com.mmxlabs.models.lng.fleet.validation.ShipFillPercentageConstraint"
                  id="com.mmxlabs.models.lng.fleet.validation.ShipFillPercentageConstraint.sanity"
                  isEnabledByDefault="true"
                  lang="Java"
                  mode="Batch"
                  name="Ship Fill Percentage is low"
                  severity="WARNING"
                  statusCode="1">
               <message>
                  Vessel {0} has a fill capacity of {1} percent, which is less than the sensible threshold of {2} percent.
               </message>
               <description>
                  Fill capacity should not be too low.
               </description>
               <target
                     class="Vessel">
               </target>
            </constraint>
          
            <constraint
                  class="com.mmxlabs.models.lng.fleet.validation.BaseFuelEquivalenceConstraint"
                  id="com.mmxlabs.models.lng.fleet.validation.BaseFuelEquivalenceConstraint"
                  lang="Java"
                  mode="Batch"
                  name="Base Fuel Constraints"
                  severity="ERROR"
                  statusCode="1">
               <message>
                  {0}
               </message>
               <description>
                  Check for valid base fuel equivalence factor
               </description>
               <target
                     class="BaseFuel">
               </target>
            </constraint>
            <constraint
                  class="com.mmxlabs.models.lng.fleet.validation.VesselClassSpeedCurveConstraint"
                  id="com.mmxlabs.models.lng.fleet.validation.VesselClassSpeedCurveConstraint"
                  isEnabledByDefault="true"
                  lang="Java"
                  mode="Batch"
                  name="Vessel Class Speed Curve Constraint"
                  severity="ERROR"
                  statusCode="1">
               <message>
                  {0}
               </message>
               <target
                     class="Vessel">
               </target>
            </constraint>
            <constraint
                  class="com.mmxlabs.models.lng.fleet.validation.VesselConstraint"
                  id="com.mmxlabs.models.lng.fleet.validation.VesselConstraint"
                  isEnabledByDefault="true"
                  lang="java"
                  mode="Batch"
                  name="Vessel Constraint"
                  severity="ERROR"
                  statusCode="0">
               <message>
                  {0}
               </message>
               <target
                     class="Vessel">
               </target>
            </constraint>
            <constraint
                  class="com.mmxlabs.models.lng.fleet.validation.VesselClassSafetyHeelConstraint"
                  id="com.mmxlabs.models.lng.fleet.validation.VesselClassSafetyHeelConstraint"
                  isEnabledByDefault="true"
                  lang="Java"
                  mode="Batch"
                  name="Safety heel is zero"
                  severity="WARNING"
                  statusCode="1">
               <message>
                  [Vessel|{0}] Safety heel is zero. Typical value should be at least 300mÂ³.
               </message>
               <description>
                  The safety heel of the vessel should be at least 300m^3.
               </description>
               <target
                     class="Vessel">
               </target>
            </constraint>
         </constraints>
      </constraintProvider>
   </extension>

</plugin>
