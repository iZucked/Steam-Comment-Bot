<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>optimiser-parent</artifactId>
		<groupId>com.mmxlabs.optimiser</groupId>
		<version>1.0-SNAPSHOT</version>
	</parent>
	<groupId>com.mmxlabs.optimiser</groupId>
	<artifactId>optimiser-common</artifactId>
	<version>1.0-SNAPSHOT</version>
	<packaging>jar</packaging>
	<name>Optimiser - Common</name>
	<dependencies>
		<dependency>
			<groupId>com.mmxlabs.optimiser</groupId>
			<artifactId>optimiser-core</artifactId>
			<version>1.0-SNAPSHOT</version>
			<type>jar</type>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>${junit.version}</version>
			<type>jar</type>
			<scope>test</scope>
		</dependency>

		<dependency>
			<groupId>org.jmock</groupId>
			<artifactId>jmock-junit4</artifactId>
			<version>${jmock.version}</version>
			<scope>test</scope>
		</dependency>

	</dependencies>

	<build>
		<plugins>
			<!-- Hook bundle manifest generation into build process -->
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<executions>
					<execution>
						<id>bundle-manifests</id>
						<phase>process-classes</phase>
						<goals>
							<goal>manifest</goal>
						</goals>
					</execution>
				</executions>

				<configuration>
					<!-- Generate manifest in top level so Eclipse/PDE can pick it up in 
						source tree -->
					<manifestLocation>META-INF</manifestLocation>
					<instructions>
						<!-- Export all packages with this prefix. Default is all local excluding 
							.impl packages -->
						<Export-Package>com.mmxlabs.optimiser.common.*;version="${pom.version}"</Export-Package>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>
