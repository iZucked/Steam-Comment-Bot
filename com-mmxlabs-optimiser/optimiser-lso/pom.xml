<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<artifactId>optimiser-lso</artifactId>
	<packaging>bundle</packaging>
	<version>1.1.1-SNAPSHOT</version>
	<name>Optimiser - LSO</name>

	<parent>
		<groupId>com.mmxlabs.optimiser</groupId>
		<artifactId>optimiser-parent</artifactId>
		<version>1.1.1-SNAPSHOT</version>
	</parent>

	<dependencies>

		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>com.springsource.slf4j.api</artifactId>
		</dependency>

		<dependency>
			<groupId>com.mmxlabs.optimiser</groupId>
			<artifactId>optimiser-core</artifactId>
			<version> 1.1.1-SNAPSHOT</version>
		</dependency>

		<dependency>
			<groupId>com.mmxlabs.common</groupId>
			<artifactId>common-util</artifactId>
			<version>2.0.0-RELEASE</version>
		</dependency>


		<dependency>
			<groupId>com.google.guava</groupId>
			<artifactId>guava</artifactId>
			<version>${guava-osgi.version}</version>
		</dependency>
		
		<dependency>
			<groupId>org.ops4j.peaberry.extensions</groupId>
			<artifactId>peaberry.activation</artifactId>
			<version>1.3</version>
			<type>bundle</type>
		</dependency>

		<dependency>
			<groupId>org.jmock</groupId>
			<artifactId>jmock-junit4</artifactId>
			<scope>test</scope>
		</dependency>

		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<scope>test</scope>
		</dependency>

		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>com.springsource.slf4j.log4j</artifactId>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>build-helper-maven-plugin</artifactId>
			</plugin>

			<!-- Hook bundle manifest generation into build process -->
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>

				<configuration>
					<instructions>
						<!-- Export all packages with this prefix. Default is all local excluding 
							.impl packages -->
						<Export-Package>com.mmxlabs.optimiser.lso.*;version="${_Bundle-UnqualifiedVersion}</Export-Package>
					</instructions>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-source-plugin</artifactId>
			</plugin>


		</plugins>
	</build>
</project>
